VARDIR="/var/lib/spots2"
CONFFILE="${VARDIR}/.spots2/spots2.conf"

depend() {
	need net
}

checkconfig() {
	if [[ "${SPOTS2_USER}" == "" ]] ; then
		eerror "Please edit /etc/conf.d/spots2d"
		eerror "A user must be specified to run spots2d as that user."
		eerror "Modify USER to your needs (you may also add a group after a colon)"
		return 1
	fi
	if ! `getent passwd | cut -d ':' -f 1 | grep $( echo "${SPOTS2_USER}" | cut -d ':' -f 1 ) -sq` ; then
		eerror "Please edit /etc/conf.d/spots2d"
		eerror "Specified user must exist!"
		return 1
	fi
	if `echo "${SPOTS2_USER}" | grep ':' -sq` ; then
		if ! `cut -d ':' -f 1 /etc/group | grep $( echo "${SPOTS2_USER}" | cut -d ':' -f 2 ) -sq` ; then
			eerror "Please edit /etc/conf.d/spots2d"
			eerror "Specified group must exist!"
			return 1
		fi
	fi
	if ! grep -q '^rpcpassword=' "${CONFFILE}"; then
		eerror "Please edit `readlink -f ${CONFFILE}`"
		eerror "There must be at least a line assigning rpcpassword=something-secure"
		return 1
	fi
	if ! stat -Lc '%a' "${CONFFILE}" | grep -q '^[4567]00$'; then
		eerror "`readlink -f ${CONFFILE}` should not be readable by other users"
		return 1
	fi
	return 0
}

start() {
	checkconfig || return 1
	ebegin "Starting Spots2d daemon"

	pkg-config openrc
	if [ $? = 0 ]; then
	   start_openrc
	else
	   start_baselayout
	fi
}

stop() {
       ebegin "Stopping Spots2 daemon"

       pkg-config openrc
       if [ $? = 0 ]; then
	   stop_openrc
       else
	   stop_baselayout
       fi
}

start_openrc() {
	start-stop-daemon \
	--start --user "${SPOTS2_USER}" --name spots2d \
	--pidfile /var/run/spots2d.pid --make-pidfile \
	--env HOME="${VARDIR}" --exec /usr/bin/spots2d \
	--nicelevel "${NICELEVEL}" \
	--background \
	--wait 2000 \
	-- ${SPOTS2_OPTS}
	eend $?
}

stop_openrc() {
	start-stop-daemon --stop --user "${SPOTS2_USER}" \
	--name spots2d --pidfile /var/run/spots2d.pid \
	--wait 30000 \
	--progress
	eend $?
}

start_baselayout() {
	start-stop-daemon \
	--start --user "${SPOTS2_USER}" --name spots2d \
	--pidfile /var/run/spots2d.pid --make-pidfile \
	--env HOME="${VARDIR}" --exec /usr/bin/spots2d \
	--chuid "${SPOTS2_USER}" \
	--nicelevel "${NICELEVEL}" \
	--background \
	-- ${SPOTS2_OPTS}
	eend $?
}

stop_baselayout() {
	start-stop-daemon \
	--stop \
	--user "${SPOTS2_USER}" \
	--name spots2d \
	--pidfile /var/run/spots2d.pid
	eend $?
}
