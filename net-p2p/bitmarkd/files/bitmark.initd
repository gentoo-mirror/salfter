VARDIR="/var/lib/bitmark"
CONFFILE="${VARDIR}/.bitmark/bitmark.conf"

depend() {
	need net
}

checkconfig() {
	if [[ "${BITMARK_USER}" == "" ]] ; then
		eerror "Please edit /etc/conf.d/bitmarkd"
		eerror "A user must be specified to run bitmarkd as that user."
		eerror "Modify USER to your needs (you may also add a group after a colon)"
		return 1
	fi
	if ! `getent passwd | cut -d ':' -f 1 | grep $( echo "${BITMARK_USER}" | cut -d ':' -f 1 ) -sq` ; then
		eerror "Please edit /etc/conf.d/bitmarkd"
		eerror "Specified user must exist!"
		return 1
	fi
	if `echo "${BITMARK_USER}" | grep ':' -sq` ; then
		if ! `cut -d ':' -f 1 /etc/group | grep $( echo "${BITMARK_USER}" | cut -d ':' -f 2 ) -sq` ; then
			eerror "Please edit /etc/conf.d/bitmarkd"
			eerror "Specified group must exist!"
			return 1
		fi
	fi
	if ! grep -q '^rpcpassword=' "${CONFFILE}"; then
		eerror "Please edit `readlink -f ${CONFFILE}`"
		eerror "There must be at least a line assigning rpcpassword=something-secure"
		return 1
	fi
	if ! stat -Lc '%a' "${CONFFILE}" | grep -q '^[4567]00$'; then
		eerror "`readlink -f ${CONFFILE}` should not be readable by other users"
		return 1
	fi
	return 0
}

start() {
	checkconfig || return 1
	ebegin "Starting Bitmark daemon"

	pkg-config openrc
	if [ $? = 0 ]; then
	   start_openrc
	else
	   start_baselayout
	fi
}

stop() {
       ebegin "Stopping Bitmark daemon"

       pkg-config openrc
       if [ $? = 0 ]; then
	   stop_openrc
       else
	   stop_baselayout
       fi
}

start_openrc() {
	start-stop-daemon \
	--start --user "${BITMARK_USER}" --name bitmarkd \
	--pidfile /var/run/bitmarkd.pid --make-pidfile \
	--env HOME="${VARDIR}" --exec /usr/bin/bitmarkd \
	--nicelevel "${NICELEVEL}" \
	--background \
	--wait 2000 \
	-- ${BITMARK_OPTS}
	eend $?
}

stop_openrc() {
	start-stop-daemon --stop --user "${BITMARK_USER}" \
	--name bitmarkd --pidfile /var/run/bitmarkd.pid \
	--wait 30000 \
	--progress
	eend $?
}

start_baselayout() {
	start-stop-daemon \
	--start --user "${BITMARK_USER}" --name bitmarkd \
	--pidfile /var/run/bitmarkd.pid --make-pidfile \
	--env HOME="${VARDIR}" --exec /usr/bin/bitmarkd \
	--chuid "${BITMARK_USER}" \
	--nicelevel "${NICELEVEL}" \
	--background \
	-- ${BITMARK_OPTS}
	eend $?
}

stop_baselayout() {
	start-stop-daemon \
	--stop \
	--user "${BITMARK_USER}" \
	--name bitmarkd \
	--pidfile /var/run/bitmarkd.pid
	eend $?
}
